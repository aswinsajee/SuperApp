@page "/contact"
@using SuperApp_UI.Models

<div class="contact-section d-flex flex-column align-items-center justify-content-center min-vh-100 text-center text-white">
    <h2 class="mb-4 fw-bold">Contact Us</h2>
    <p class="text-light mb-5">We’d love to hear from you! Fill out the form below and we’ll get in touch soon.</p>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <EditForm Model="@contactForm" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group mb-3 text-start">
                        <label class="form-label fw-semibold">Name</label>
                        <InputText class="form-control form-control-lg rounded-3" @bind-Value="contactForm.Name" placeholder="Your name" />
                        <ValidationMessage For="@(() => contactForm.Name)" />
                    </div>

                    <div class="form-group mb-3 text-start">
                        <label class="form-label fw-semibold">Email</label>
                        <InputText class="form-control form-control-lg rounded-3" @bind-Value="contactForm.Email" placeholder="you@example.com" />
                        <ValidationMessage For="@(() => contactForm.Email)" />
                    </div>

                    <div class="form-group mb-3 text-start">
                        <label class="form-label fw-semibold">Message</label>
                        <InputTextArea class="form-control form-control-lg rounded-3" @bind-Value="contactForm.Message" rows="5" placeholder="Write your message here..." />
                        <ValidationMessage For="@(() => contactForm.Message)" />
                    </div>

                    <button type="submit" class="btn btn-gradient w-100 py-2 mt-3 fw-semibold">Send Message</button>
                </EditForm>

                @if (isSubmitted)
                {
                    <div class="alert alert-success mt-4 text-start shadow-sm">
                        ✅ Thank you, @contactForm.Name! We’ve received your message.
                    </div>
                }
            </div>
        </div>

        <div class="contact-info mt-5">
            <h5 class="fw-semibold mb-3">Or reach us directly</h5>
            <p><i class="bi bi-envelope-fill me-2"></i> support@superapp.com</p>
            <p><i class="bi bi-telephone-fill me-2"></i> +91 98765 43210</p>
            <div class="social-icons mt-3">
                <a href="#" class="me-3 text-white fs-4"><i class="bi bi-facebook"></i></a>
                <a href="#" class="me-3 text-white fs-4"><i class="bi bi-twitter"></i></a>
                <a href="#" class="me-3 text-white fs-4"><i class="bi bi-instagram"></i></a>
                <a href="#" class="text-white fs-4"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>
    </div>
</div>

@code {
    private ContactForm contactForm = new();
    private bool isSubmitted = false;

    private void HandleSubmit()
    {
        isSubmitted = true;
    }

}

