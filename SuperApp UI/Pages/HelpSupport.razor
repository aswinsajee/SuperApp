@page "/help-support"

<div class="help-container">
    <h2 class="help-heading">Help & Support</h2>
    <p class="help-subtext">We’re here to assist you. Choose a topic or send us a message below.</p>

    <!-- FAQ Section -->
    <section class="faq-section">
        <h3 class="faq-title">Frequently Asked Questions</h3>

        <details>
            <summary>How do I reset my password?</summary>
            <p>Go to your profile settings and click "Change Password". You’ll get an email with reset instructions.</p>
        </details>

        <details>
            <summary>How can I contact customer support?</summary>
            <p>You can fill the contact form below or email us directly at <strong>support@superapp.com</strong>.</p>
        </details>

        <details>
            <summary>Can I cancel my subscription?</summary>
            <p>Yes, you can cancel anytime in the "Manage Plans" section of your account.</p>
        </details>
    </section>

    <!-- Contact Form -->
    <section class="contact-section">
        <h3 class="contact-title">Send us a message</h3>

        @if (!isSubmitted)
        {
            <form class="contact-form" @onsubmit="HandleSubmit">
                <input type="text" placeholder="Your Name" @bind="name" required />
                <input type="email" placeholder="Your Email" @bind="email" required />
                <textarea rows="4" placeholder="Your Message" @bind="message" required></textarea>
                <button type="submit">Submit</button>
            </form>
        }
        else
        {
            <p class="success-message">✅ Thank you! We’ve received your message.</p>
        }
    </section>
</div>

@code {
    private string name;
    private string email;
    private string message;
    private bool isSubmitted = false;

    private void HandleSubmit()
    {
        // In production: send this message via API or email service
        isSubmitted = true;
    }
}
