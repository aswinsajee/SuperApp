@page "/SignIn"
@using SuperApp_UI.Models
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="login-container">
    <div class="login-card">
        <h2 class="text-center mb-4">Create Account</h2>

        <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label class="form-label">Email</label>
                <InputText @bind-Value="registerModel.UserName" class="form-control" placeholder="Someone@super.com" />
                @if (!string.IsNullOrEmpty(emailError))
                {
                    <p class="text-danger small">@emailError</p>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <InputText @bind-Value="registerModel.Password" type="password" class="form-control" placeholder="Enter your Password" />
                @if (!string.IsNullOrEmpty(passwordError))
                {
                    <p class="text-danger small">@passwordError</p>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Phone Number</label>
                <InputText @bind-Value="registerModel.PhoneNumber" class="form-control" maxlength="10" placeholder="Enter your phone number" />
                @if (!string.IsNullOrEmpty(phoneError))
                {
                    <p class="text-danger small">@phoneError</p>
                }
            </div>

            <button class="btn btn-primary w-100" type="submit">Register</button>
        </EditForm>

        <div class="text-center mt-3">
            <p>
                Already have an account?
                <NavLink href="/Login">Login</NavLink>
            </p>
        </div>
    </div>
</div>

@code {
    private RegisterRequestDTO registerModel = new();
    private string? message;
    private string alertClass = "alert-info";
    private string? emailError;
    private string? passwordError;
    private string? phoneError;

    private async Task HandleRegister()
    {
        try
        {

            //Validate Email

            if (string.IsNullOrWhiteSpace(registerModel.UserName))
            {
                emailError = "Email field cannot be empty";
    
                return;
            }
            emailError = null;

            //Validate Passwod
            if (string.IsNullOrWhiteSpace(registerModel.Password))
            {
                passwordError = "Password field cannot be empty.";
                
                return;
            }
            passwordError = null;

            // Validate phone number (10 digits)
            if (string.IsNullOrWhiteSpace(registerModel.PhoneNumber) || registerModel.PhoneNumber.Length != 10)
            {
                phoneError = "Phone number must be exactly 10 digits.";
                
                return;
            }
            phoneError = null;


            // Assign default role
            registerModel.Roles = new List<string> { "User" };

            var response = await Http.PostAsJsonAsync("api/Auth/Register", registerModel);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("showPopup", "Registration successful 🎉 Redirecting to login...", "success");
                await Task.Delay(2000);
                Navigation.NavigateTo("/Login", true);
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("showPopup", $"Registration failed: {error}", "error");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("showPopup", $"Error: {ex.Message}", "error");
        }
    }
}
