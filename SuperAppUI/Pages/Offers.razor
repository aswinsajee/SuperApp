@page "/offers"
@inject NavigationManager Navigation
<div class="offers-section d-flex flex-column align-items-center justify-content-center min-vh-100 text-center text-white">
    <h3 class="mb-4 fw-bold">Latest Offers</h3>

    <div class="container">
        <div class="row justify-content-center">
            @foreach (var offer in offers)
            {
                <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                    <div class="card offer-card shadow-lg border-0">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <h5 class="card-title text-dark fw-bold">@offer.Title</h5>
                            <p class="card-text text-muted">@offer.Description</p>
                            <p class="fw-bold text-success fs-5">@offer.Discount</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <button class="btn btn-gradient mt-3 px-4 py-2 rounded-3 fw-semibold" @onclick="NavigateToPlans">
        View Plans
    </button>
</div>

@code {
    private List<Offer> offers = new List<Offer>
    {
        new Offer { Title = "New Year Bonanza", Description = "Get 20% off on all premium subscriptions!", Discount = "20% OFF" },
        new Offer { Title = "Student Special", Description = "Students get an extra 10% discount on any plan.", Discount = "10% OFF" },
        new Offer { Title = "Refer & Earn", Description = "Refer a friend and get ₹200 wallet credit!", Discount = "₹200 Credit" }
    };

    private void NavigateToPlans()
    {
        Navigation.NavigateTo("/plan");
    }

    
}



@code {
    public class Offer
    {
        public string Title { get; set; }
        public string Description { get; set; }
        public string Discount { get; set; }
    }
}
