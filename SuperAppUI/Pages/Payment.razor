@page "/Payment/{planId:guid}"
@using SuperAppUI.Models
@inject HttpClient Http
@inject NavigationManager Navigation
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<link href="css/payment-page.css" rel="stylesheet" />

<h3 class="mb-3">Checkout Page</h3>

@if (plan == null)
{
    <p>Loading plan details...</p>
}
else
{
    <div class="card p-4 shadow-sm" style="max-width:400px;">
        <h4>@plan.PlanName</h4>
        <p>@plan.PlanDescription</p>
        <p><strong>Price:</strong> ₹@plan.Cost</p>
        <div class="mb-3">
            <label>Remarks</label>
            <input class="form-control" type="text" @bind="remarks" />
        </div>
    </div>

    <h4 class="mb-3">Select Payment Method</h4>

    @if (paymentMethods == null)
    {
        <p>Loading payment methods...</p>
    }
    else if (!paymentMethods.Any())
    {
        <p>No payment methods available.</p>
    }
    else
    {
        <div class="list-group" style="max-width:400px;">
            @foreach (var method in paymentMethods)
            {
                <button class="list-group-item list-group-item-action"
                @onclick="() => SelectPaymentMethod(method)">
                    @method.MethodName
                </button>
            }
        </div>
    }

    @if (selectedMethod != null)
    {
        <div class="alert alert-info mt-3">
            <p>You selected: <strong>@selectedMethod.MethodName</strong></p>
            <button class="btn btn-success" @onclick="ConfirmPayment">Pay Now</button>
        </div>
    }
}

@code {

    [Parameter] public Guid planId { get; set; }
    private Guid userId;
    private PlanDTO? plan;
    private List<PaymentMethodDTO>? paymentMethods;
    //private List<PayementRequestDTO> payementRequest;
    private PaymentMethodDTO? selectedMethod;
    private string? remarks;

    

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var userId = await LocalStorage.GetItemAsync<string>("userId");
            if (string.IsNullOrEmpty(userId))
            {
                Navigation.NavigateTo("/Login");
                return;
            }
            
            // 1️⃣ Fetch plan details
            plan = await Http.GetFromJsonAsync<PlanDTO>($"api/Plans/{planId}");

            // 2️⃣ Fetch available payment methods
            paymentMethods = await Http.GetFromJsonAsync<List<PaymentMethodDTO>>("api/Payement");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private void SelectPaymentMethod(PaymentMethodDTO method)
    {
        selectedMethod = method;
    }

    private async Task ConfirmPayment()
    {
        var userId = await LocalStorage.GetItemAsync<string>("userId");
        // You can call your payment API here
        var paymentRequest = new
        {
            PayementMethodsId = selectedMethod.PayementMethodsId,
            PlansDomainId = plan.PlansDomainId,
            Amount = plan.Cost,
            UserId = userId,
            Remarks = remarks
    };

        var response = await Http.PostAsJsonAsync("api/Payement", paymentRequest);

        if (response.IsSuccessStatusCode)
        {
            Navigation.NavigateTo("/Plan");
        }
        else
        {
            Console.WriteLine("Payment failed!");
        }
    }
}
