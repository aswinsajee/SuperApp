@page "/SignIn"
@using SuperAppUI.Models
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="login-container">
    <div class="login-card">
        <h2 class="text-center mb-4">Create Account</h2>

        <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <!-- Email -->
            <div class="mb-3">
                <label class="form-label">Email</label>
                <InputText @bind-Value="registerModel.UserName" class="form-control" placeholder="Someone@super.com" />
                @if (!string.IsNullOrEmpty(emailError))
                {
                    <p class="text-danger small">@emailError</p>
                }
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label class="form-label">Password</label>
                <InputText @bind-Value="registerModel.Password"
                           type="password" class="form-control" placeholder="Enter your password" />
                @if (!string.IsNullOrEmpty(passwordError))
                {
                    <p class="text-danger small">@passwordError</p>
                }
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <InputText @bind-Value="confirmPassword"
                           type="password" class="form-control" placeholder="Re-enter your password" />
                @if (!string.IsNullOrEmpty(confirmPasswordError))
                {
                    <p class="text-danger small">@confirmPasswordError</p>
                }
            </div>

            <!-- Phone No -->
            <div class="mb-3">
                <label class="form-label">Phone Number</label>
                <InputText @bind-Value="registerModel.PhoneNumber" class="form-control"
                           maxlength="10" placeholder="Enter your phone number" />
                @if (!string.IsNullOrEmpty(phoneError))
                {
                    <p class="text-danger small">@phoneError</p>
                }
            </div>

            <button class="btn btn-primary w-100" type="submit">Register</button>
        </EditForm>

        <div class="text-center mt-3">
            <p>Already have an account? <NavLink href="/Login">Login</NavLink></p>
        </div>
    </div>
</div>

@code {
    private RegisterRequestDTO registerModel = new();
    private string confirmPassword = string.Empty;

    private string? emailError;
    private string? passwordError;
    private string? confirmPasswordError;
    private string? phoneError;

    private async Task HandleRegister()
    {
        try
        {
            // ---- Email validation ---
            if (string.IsNullOrWhiteSpace(registerModel.UserName))
            {
                emailError = "Email cannot be empty.";
                return;
            }
            emailError = null;

            // ----- Password validation ---
            if (string.IsNullOrWhiteSpace(registerModel.Password))
            {
                passwordError = "Password cannot be empty.";
                return;
            }

            if (!PasswordIsValid(registerModel.Password))
            {
                passwordError = "Password must contain 1 uppercase, 1 number, and 1 special character.";
                return;
            }
            passwordError = null;

            // ----- Confirm password validation ---------
            if (confirmPassword != registerModel.Password)
            {
                confirmPasswordError = "Passwords do not match.";
                return;
            }
            confirmPasswordError = null;

            //------- Phone validation ---------
            if (string.IsNullOrWhiteSpace(registerModel.PhoneNumber) ||
                registerModel.PhoneNumber.Length != 10)
            {
                phoneError = "Phone number must be exactly 10 digits.";
                return;
            }
            phoneError = null;

            // default role
            registerModel.Roles = new List<string> { "User" };

            // Send ONLY main password to API
            var response = await Http.PostAsJsonAsync("api/Auth/Register", registerModel);

            if (response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("showPopup",
                    "Registration successful 🎉 Redirecting to login...",
                    "success");

                await Task.Delay(2000);
                Navigation.NavigateTo("/Login", true);
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await JS.InvokeVoidAsync("showPopup", $"Registration failed: {error}", "error");
            }
        }
        catch (Exception ex)
        {
            await Http.PostAsJsonAsync("api/ClientLogging/LogClientError", ex.ToString());
            await JS.InvokeVoidAsync("showPopup", "Something went wrong. Please try again.", "error");
        }
    }

    // Password validation method
    private bool PasswordIsValid(string password)
    {
        bool hasUpper = password.Any(char.IsUpper);
        bool hasDigit = password.Any(char.IsDigit);
        bool hasSpecial = password.Any(ch => !char.IsLetterOrDigit(ch));

        return hasUpper && hasDigit && hasSpecial;
    }
}
